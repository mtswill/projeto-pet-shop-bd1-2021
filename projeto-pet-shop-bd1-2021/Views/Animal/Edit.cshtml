@model projeto_pet_shop_bd1_2021.Models.ViewModels.AnimalViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Animal.Nome" class="control-label"></label>
                <input asp-for="Animal.Nome" class="form-control" />
                <span asp-validation-for="Animal.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.RacaId" class="control-label"></label>
                <select asp-for="Animal.RacaId" class="form-control" asp-items="@(new SelectList(Model.Raca,"Id", "Descricao"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Animal.ClienteId" class="control-label"></label>
                <select asp-for="Animal.ClienteId" class="form-control" asp-items="@(new SelectList(Model.Cliente,"Id", "Id"))"></select>
            </div>
            <input type="hidden" asp-for="Animal.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
