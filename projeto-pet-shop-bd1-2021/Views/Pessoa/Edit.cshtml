@model projeto_pet_shop_bd1_2021.Models.Pessoas.Pessoa

@{
    ViewData["Title"] = "Editar pessoa";
}

<h1>Editar pessoa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
